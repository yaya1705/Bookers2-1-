<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <!--ユーザー情報-->
      <%= render "users/info" , user: current_user %>
      <div class="row">
        <%= link_to  edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New Book</h2>
      <%= form_with model: @book_new, url: books_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :Title %> </br>
          <%= f.text_field :title,  autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :Opinion%> </br>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book", class:"btn btn-success"%>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table hover  table-inverse">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user) do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %> </br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                  <%= link_to @book.title, book_path(@book) %>
              </td>
              <td>
                  <%= @book.body %>
              </td>
              <td>
                <%= link_to "Edit", edit_user_path(@book.user.id), class: "btn btn-success btn-sm"%>
              </td>
              <td>
                <%= link_to "Destroy",book_path(@book.user.id), method: :delete, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>